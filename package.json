{
  "name": "first-web-game-maker",
  "displayName": "First Web Game Maker",
  "description": "First Web Game Maker",
  "publisher": "utcode",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ut-code/first-web-game-maker.git"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "first-web-game-maker.insertHelloWorldAtTop",
        "title": "insert hello world at top"
      },
      {
        "command": "first-web-game-maker.insertAtCursor",
        "title": "insert at cursor"
      },
      {
        "command": "first-web-game-maker.deleteAfterCursor",
        "title": "delete after cursor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "first-web-game-maker",
          "title": "First Web Game Maker",
          "icon": "/src/assets/favicon.svg"
        }
      ]
    },
    "views": {
      "first-web-game-maker": [
        {
          "id": "first-web-game-maker",
          "name": "First Web Game Maker"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "prettier": "2.8.4",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "highlight.js": "^11.7.0",
    "markdown-it": "^13.0.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
